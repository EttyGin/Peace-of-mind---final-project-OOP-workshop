<UserControl x:Class="loginDb.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:loginDb.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"                             
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"                           
                             VerticalContentAlignment="Center"                          
                             Padding="25,0,0,0">

        <PasswordBox.Background>
            <ImageBrush ImageSource="/loginDb;component/Images/key.png" Stretch="Uniform" AlignmentX="Left" AlignmentY="Center" Opacity="0.85" />
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
